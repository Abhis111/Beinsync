                        <TextView
                            android:id="@+id/tv_StyleItalic"
                            android:layout_width="@dimen/activity_30dp_margin"
                            android:layout_height="@dimen/activity_30dp_margin"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:background="@drawable/grey_background"
                            android:gravity="center"
                            android:text="I"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <TextView

                        android:id="@+id/tv_Color_Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_10dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Colour"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_DayFontColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:text="Font Color"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:weightSum="5">


                            <TextView
                                android:id="@+id/tv_ColorGreen"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/activity_2dp_margin"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/green_background"
                                android:gravity="center_horizontal" />


                            <TextView
                                android:id="@+id/tv_ColorRed"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/red_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorBlue"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/blue_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorLightGreen"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/light_green_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorPink"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/pink_background"
                                android:gravity="center" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_Reading_Mode_Header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_5dp_margin"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:paddingRight="@dimen/activity_5dp_margin"
                            android:text="Reading Mode"
                            android:textColor="@color/theme_orange"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <LinearLayout
                            android:id="@+id/ll_Reading_DayMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/activity_5dp_margin"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:paddingRight="@dimen/activity_5dp_margin"
                            android:paddingTop="@dimen/activity_5dp_margin">

                            <ImageView
