                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_AligmentJustify"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankAligmentJustify"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

