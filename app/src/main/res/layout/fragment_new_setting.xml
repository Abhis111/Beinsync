<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_12dp_margin"
        android:layout_marginRight="@dimen/activity_12dp_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_10dp_margin"
                    android:paddingLeft="@dimen/activity_5dp_margin"
                    android:paddingRight="@dimen/activity_5dp_margin"
                    android:paddingTop="@dimen/activity_10dp_margin"
                    android:text="Setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_15dp_margin" />

                <ImageView
                    android:id="@+id/ta_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/activity_10dp_margin"
                    android:src="@drawable/ic_close_black_24dp"
                    android:textSize="@dimen/activity_15dp_margin" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_0.5dp_margin"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tv_Size_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_10dp_margin"
                android:paddingLeft="@dimen/activity_5dp_margin"
                android:paddingRight="@dimen/activity_5dp_margin"
                android:text="Size"
                android:textColor="@color/theme_orange"
                android:textSize="@dimen/activity_15dp_margin" />

            <LinearLayout
                android:id="@+id/linear_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Size_Header"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:id="@+id/tv_Size16"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_30dp_margin"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_16dp_margin" />

                <TextView
                    android:id="@+id/tv_Size18"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_30dp_margin"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_15dp_margin" />

                <TextView
                    android:id="@+id/tv_Size20"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_30dp_margin"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_15dp_margin" />

                <TextView
                    android:id="@+id/tv_Size22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_22dp_margin" />

                <TextView
                    android:id="@+id/tv_Size24"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_30dp_margin"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_24dp_margin" />

                <TextView
                    android:id="@+id/tv_Size26"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/activity_30dp_margin"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Aa"
                    android:textSize="@dimen/activity_26dp_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Font"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_Text"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Fonts_Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Font"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <LinearLayout
                        android:id="@+id/ll_FontRobota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_FontRobota"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"

                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankFontRobota"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <WebView
