                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:fontFamily="sans-serif"
                            android:text="Roboto"
                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <LinearLayout
