                                android:layout_width="@dimen/activity_15dp_margin"
                                android:layout_height="@dimen/activity_15dp_margin"
                                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                                android:textSize="@dimen/activity_15dp_margin" />

                            <TextView
                                android:id="@+id/tv_Reading_DayMode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_10dp_margin"
                                android:text="Day Mode"
                                android:textSize="@dimen/activity_15dp_margin" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Aligments_Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Alignment"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <LinearLayout
                        android:id="@+id/ll_AligmentLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_AligmentLeft"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankAligmentLeft"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <ImageView
                            android:layout_width="@dimen/activity_13dp_margin"
                            android:layout_height="@dimen/activity_13dp_margin"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:src="@drawable/ic_format_align_left_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <TextView
                            android:id="@+id/tv_AligmentLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:text="Left"
                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_AligmentCenter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_AligmentCenter"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankAligmentCenter"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <ImageView
                            android:layout_width="@dimen/activity_13dp_margin"
                            android:layout_height="@dimen/activity_13dp_margin"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:src="@drawable/ic_format_align_center_black_24dp"

                            android:textSize="@dimen/activity_15dp_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:text="Center"
                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_AligmentRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_AligmentRight"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankAligmentRight"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <ImageView
                            android:layout_width="@dimen/activity_13dp_margin"
                            android:layout_height="@dimen/activity_13dp_margin"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:src="@drawable/ic_format_align_right_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
