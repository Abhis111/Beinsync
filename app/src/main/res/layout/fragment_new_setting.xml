                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_FontDroidSans"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankFontDroidSans"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <WebView
                            android:id="@+id/tv_FontDroidSans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:text="Droid Sans"
                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_Style_Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Style"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <TextView
                            android:id="@+id/tv_StyleBold"
                            android:layout_width="@dimen/activity_30dp_margin"
                            android:layout_height="@dimen/activity_30dp_margin"
                            android:layout_gravity="center"
                            android:background="@drawable/grey_background"
                            android:gravity="center"
                            android:text="B"
                            android:textSize="@dimen/activity_15dp_margin"
