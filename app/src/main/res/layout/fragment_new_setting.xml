                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_Line_Spacing_Header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Line Spacing"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_30dp_margin"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:paddingRight="@dimen/activity_5dp_margin"
                            android:text="Text Line"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <Spinner
                            android:id="@+id/spinner_LineSpacing"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_30dp_margin" />

                        <EditText
                            android:id="@+id/et_LineSpacing"
                            android:layout_width="@dimen/activity_60dp_margin"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/light_grey_edittext_background"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:text="1.5"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:text="x"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:text="Colour"
                        android:textColor="@color/theme_orange"
                        android:textSize="@dimen/activity_15dp_margin"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_NightFontColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:text="Background Color"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:weightSum="5">


                            <TextView
                                android:id="@+id/tv_ColorWhite"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/activity_2dp_margin"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/white_background"
                                android:foregroundGravity="center_vertical" />


                            <TextView
                                android:id="@+id/tv_ColorLightYellow"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/light_yellow_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorLightBlue"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"
                                android:background="@drawable/light_blue_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorLighterGreen"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/activity_2dp_margin"
                                android:layout_weight="1"

                                android:background="@drawable/lighter_green_background"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/tv_ColorLightPink"
                                android:layout_width="@dimen/activity_35dp_margin"
                                android:layout_height="@dimen/activity_35dp_margin"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/light_pink_background"
                                android:gravity="center" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_5dp_margin"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:paddingRight="@dimen/activity_5dp_margin"
                            android:text="Reading Mode"
                            android:textColor="@color/theme_orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/ll_Reading_NightMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/activity_5dp_margin"
                            android:paddingLeft="@dimen/activity_5dp_margin"
                            android:paddingRight="@dimen/activity_5dp_margin"
                            android:paddingTop="@dimen/activity_5dp_margin">

                            <ImageView
                                android:id="@+id/ta_Reading_NightMode"
                                android:layout_width="@dimen/activity_15dp_margin"
                                android:layout_height="@dimen/activity_15dp_margin"
                                android:src="@drawable/ic_check_circle_black_24dp"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/activity_15dp_margin"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ta_blankReading_NightMode"
                                android:layout_width="@dimen/activity_15dp_margin"
                                android:layout_height="@dimen/activity_15dp_margin"
                                android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                                android:textSize="@dimen/activity_15dp_margin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_10dp_margin"
                                android:text="Night Mode"
                                android:textSize="@dimen/activity_15dp_margin" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/bt_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/linear_Font"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_5dp_margin"
                android:layout_marginTop="@dimen/activity_5dp_margin"
                android:background="@drawable/round_button_app_theme"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_15dp_margin" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>