                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_FontPTSans"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankFontPTSans"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <WebView
                            android:id="@+id/tv_FontPTSans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_10dp_margin"
                            android:text="PT Sans"
                            android:textSize="@dimen/activity_15dp_margin" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_FontRobotaCondensed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_5dp_margin"
                        android:paddingLeft="@dimen/activity_5dp_margin"
                        android:paddingRight="@dimen/activity_5dp_margin"
                        android:paddingTop="@dimen/activity_5dp_margin">

                        <ImageView
                            android:id="@+id/ta_FontRobotaCondensed"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_check_circle_black_24dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/activity_15dp_margin"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ta_blankFontRobotaCondensed"
                            android:layout_width="@dimen/activity_15dp_margin"
                            android:layout_height="@dimen/activity_15dp_margin"
                            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
                            android:textSize="@dimen/activity_15dp_margin" />

                        <WebView
