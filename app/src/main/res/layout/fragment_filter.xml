<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_marginLeft="@dimen/activity_12dp_margin"
            android:layout_marginRight="@dimen/activity_12dp_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_FilterHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_10dp_margin"
                    android:paddingLeft="@dimen/activity_5dp_margin"
                    android:paddingRight="@dimen/activity_5dp_margin"
                    android:paddingTop="@dimen/activity_10dp_margin"
                    android:text="Filters"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_20dp_margin" />

                <ImageView
                    android:id="@+id/ta_Refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_20dp_margin"
                    android:layout_toLeftOf="@+id/ta_Close"
                    android:padding="@dimen/activity_10dp_margin"
                   android:src="@drawable/ic_refresh_black_24dp"
                    android:textSize="@dimen/activity_20dp_margin" />

                <ImageView
                    android:id="@+id/ta_Close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/activity_10dp_margin"
                   android:src="@drawable/ic_close_black_24dp"
                    android:textSize="@dimen/activity_20dp_margin" />
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_0.5dp_margin"
                android:layout_below="@+id/rl_FilterHeader"
                android:background="@color/black" />
            <TextView
                android:id="@+id/tv_Language_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:paddingBottom="@dimen/activity_10dp_margin"
                android:paddingLeft="@dimen/activity_5dp_margin"
                android:paddingRight="@dimen/activity_5dp_margin"
                android:paddingTop="@dimen/activity_10dp_margin"
                android:text="Language"
                android:textColor="@color/theme_orange"
                android:textSize="@dimen/activity_18dp_margin" />
            <LinearLayout
                android:id="@+id/ll_Language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Language_Header"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/ll_LanguageHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_10dp_margin"
                    android:paddingLeft="@dimen/activity_5dp_margin"
                    android:paddingRight="@dimen/activity_5dp_margin"
                    android:paddingTop="@dimen/activity_10dp_margin">

                    <ImageView
                        android:id="@+id/ta_LanguageHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_box_black_24dp"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/activity_15dp_margin"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ta_blankLanguageHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <TextView
                        android:id="@+id/tv_LanguageHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_10dp_margin"
                        android:text="Hindi"
                        android:textSize="@dimen/activity_15dp_margin" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_LanguageEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_10dp_margin"
                    android:paddingLeft="@dimen/activity_5dp_margin"
                    android:paddingRight="@dimen/activity_5dp_margin"
                    android:paddingTop="@dimen/activity_10dp_margin">

                    <ImageView
                        android:id="@+id/ta_LanguageEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_box_black_24dp"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/activity_15dp_margin"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ta_blankLanguageEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                        android:textSize="@dimen/activity_15dp_margin" />

                    <TextView
                        android:id="@+id/tv_LanguageEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_10dp_margin"
                        android:text="English"
                        android:textSize="@dimen/activity_15dp_margin" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_Tags_Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_Language"
                android:paddingBottom="@dimen/activity_10dp_margin"
                android:paddingLeft="@dimen/activity_5dp_margin"
                android:paddingRight="@dimen/activity_5dp_margin"
                android:paddingTop="@dimen/activity_10dp_margin"
                android:text="Tags"
                android:textColor="@color/theme_orange"
                android:textSize="@dimen/activity_18dp_margin" />
            <LinearLayout
                android:layout_above="@+id/bt_apply"
                android:layout_below="@+id/tv_Tags_Header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_TagLIst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
            <Button
                android:id="@+id/bt_apply"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_10dp_margin"
                android:layout_marginTop="@dimen/activity_10dp_margin"
                android:background="@drawable/round_button_app_theme"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_18dp_margin" />
        </RelativeLayout>

</RelativeLayout>