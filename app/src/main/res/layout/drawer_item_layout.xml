<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rl_DrawerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_15dp_margin"
            android:layout_marginTop="@dimen/activity_15dp_margin"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_Images"
                android:layout_width="@dimen/activity_15dp_margin"
                android:layout_height="@dimen/activity_15dp_margin"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_radio_button_unchecked_black_24dp"
                android:backgroundTint="@color/white" />

            <com.binaryic.beinsync.common.TextViewPrimary
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/activity_15dp_margin"
                android:layout_toRightOf="@+id/iv_Images"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_16dp_margin" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_expand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDarkGray" />

    </LinearLayout>


</LinearLayout>
