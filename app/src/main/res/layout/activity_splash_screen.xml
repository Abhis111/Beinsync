<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_Splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.binaryic.beinsync.activities.SplashScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Logo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_02" />


        <com.binaryic.beinsync.common.TextViewPrimary

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_Logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Enabling Digital Commerce"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_25dp_margin"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
