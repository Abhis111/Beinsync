<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="@dimen/activity_10dp_margin"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/tvi_Home"
        android:layout_width="60dp"
        android:layout_height="@dimen/activity_60dp_margin"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_5dp_margin"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_15dp_margin"
        android:paddingRight="@dimen/activity_15dp_margin"
        android:src="@drawable/ic_home_black_24dp" />
</RelativeLayout>