<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_orange">

        <TextView
            android:id="@+id/tv_Story_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_16dp_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center|start"
            android:text="Story Name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
       android:layout_margin="@dimen/activity_16dp_margin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/logo"
                android:id="@+id/iv_StoryImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_150dp_margin" />

            <RelativeLayout
                android:background="@color/white"

                android:id="@+id/sample_main_layout"
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>