<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_child_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="@dimen/activity_30dp_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_Images"
            android:layout_width="@dimen/activity_15dp_margin"
            android:layout_height="@dimen/activity_15dp_margin"
            android:layout_marginBottom="@dimen/activity_15dp_margin"
            android:layout_marginTop="@dimen/activity_15dp_margin"
            android:background="@drawable/ic_check_box_outline_blank_black_24dp"
            android:backgroundTint="@color/white" />


        <com.binaryic.beinsync.common.TextViewPrimary
            android:id="@+id/tv_child"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/activity_15dp_margin"
            android:layout_marginLeft="@dimen/activity_15dp_margin"
            android:layout_marginTop="@dimen/activity_15dp_margin"
            android:layout_toRightOf="@+id/iv_Images"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_16dp_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_child"
            android:background="@color/colorDarkGray" />

    </RelativeLayout>
</LinearLayout>